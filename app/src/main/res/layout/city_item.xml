<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height_8"
    android:padding="@dimen/padding_left">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height_8"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_city_manager_district"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="徐汇区"
            android:textSize="@dimen/content_text_size" />

        <TextView
            android:id="@+id/item_city_manager_city"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="上海"
            android:textSize="12sp"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/item_city_manager_weather"
        android:layout_width="@dimen/view_width"
        android:layout_height="@dimen/item_height_8"
        android:layout_gravity="end"
        android:layout_toStartOf="@+id/item_city_manager_temp"
        android:gravity="center"
        android:text="weather"
        android:textSize="@dimen/item_weather_textsize" />

    <TextView
        android:id="@+id/item_city_manager_temp"
        android:layout_width="@dimen/view_width"
        android:layout_height="@dimen/item_height_8"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/text_margin"
        android:gravity="center_vertical"
        android:text="show_temp"
        android:textSize="@dimen/item_weather_textsize" />


</RelativeLayout>
